<script type="text/javascript">
    function submitcmnt() {
        $.ajax({
            method : 'post',
            url : 'add_comment',
            data : {
                p_id : $('#pid').text(),
                content : $('#content').val(),
                usn : $('#userusn').text(),
                emaild : $('#emailid').val()
                },
            success : function(data) {
                location.reload();
            },
            failure : function() {
                alert('submission failed');
            }
        });
    }
</script>
<script type="text/javascript" src="javascripts/jquery.min.js"></script>
<script type="text/javascript" src="javascripts/jcs.js"></script>
<body>

    <div class="bar">
        <div class="user">Welcome, <%=user.name%></div>
        <span id="userusn" style="display:none;"><%=user.usn%></div>
    </div>
    
    <div class="cards">
        <div class="container">        
            <div class="SpringGreen">
                <div class="card">
                    <span id="pid" hidden><%=note[0]._id%></span>
                    <div class="title">
                        <a href="<%='http://nptel.ac.in/courses/' + note[0].subject + '/' + note[0].lec_no%>"
                            target="_blank">
                            Lecture
                        </a> at <%=note[0].note_time%>
                        <a href=<%='/view_note?_id='+note[0]._id%>>View note</a>
                    </div>
                    <div class="content">
                        <%=note[0].content%>
                        <% if(note[0].ext_links) { %>
                            <br/> <a href="<%=note[0].ext_links%>"><%=note[0].ext_links%></a>
                        <%}%>
                    </div>
                </div>
            </div>
        </div>
    </div>
